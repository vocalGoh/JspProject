<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  
  <display-name>jsp02</display-name>
  <!-- 세션유효시간 설정(분 단위), 기본값 30분  -->
  <session-config>
   <session-timeout>15</session-timeout>
  </session-config>
  
  <servlet>
   <servlet-name>board</servlet-name>
   <servlet-class>board.BoardController</servlet-class>
  </servlet>
  <!-- 서블릿 매핑 정보  -->
  <servlet-mapping>
   <servlet-name>board</servlet-name>
   <url-pattern>/board_servlet/*</url-pattern>
  </servlet-mapping>
  
  
  
    <servlet>
   <servlet-name>board2</servlet-name>
   <servlet-class>board2.Board2Controller</servlet-class>
  </servlet>
  <!-- 서블릿 매핑 정보  -->
  <servlet-mapping>
   <servlet-name>board2</servlet-name>
   <url-pattern>/board2_servlet/*</url-pattern>
  </servlet-mapping>
  
  
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>